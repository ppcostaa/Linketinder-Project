{
  "compilerOptions": {
    "lib": ["ES6", "dom"],
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
